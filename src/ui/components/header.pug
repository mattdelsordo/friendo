
mixin attribution-dialog
    .modal.fade(id='attributions' role='dialog')
        .modal-dialog(role='document')
            .modal-content
                .modal-header
                    h5.modal-title Attributions
                .modal-body
                    ul
                        li
                            | Emoji from
                            |
                            a(href="https://github.com/twitter/twemoji" target="_blank") twemoji
                            |
                            | by
                            |
                            a(href="https://github.com/twitter" target="_blank") Twitter
                            |
                            | are licensed under
                            |
                            a(href="https://creativecommons.org/licenses/by/4.0/" target="_blank") CC BY 4.0
                .modal-footer
                    button.btn.btn-secondary(data-dismiss='modal') Nice

include emoji
+attribution-dialog()
header#header
    .container.text-muted.align-middle.h-100
        .d-flex.h-100
            span#title Friendo
            // not an emoji - just unicode
            span.ml-3#game-info-icon #{'\u{1f6c8}'}
            span.ml-2.w-100.d-flex#game-info
                a#vernum(href="https://github.com/mattdelsordo/friendo/releases" target="_blank") [ v0.0.0 ]
                a.ml-3(href="https://github.com/mattdelsordo/friendo" target="_blank")
                    | [
                    +emoji('1f3b2')(class="mr-1 ml-1")
                    | A game by Matt DelSordo ]
                a.ml-3(href="https://github.com/mattdelsordo/friendo/issues" target="_blank")
                    | [
                    +emoji('1f41b')(class="mr-1 ml-1")
                    | Report a bug ]
                a.ml-3(href="" data-toggle="modal" data-target="#attributions")
                    | [
                    +emoji('1f4dc')(class="mr-1 ml-1")
                    | Attributions ]
