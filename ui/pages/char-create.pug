-
    var types = [
        'Earth',
        'Water',
        'Fire',
        'Air',
    ]

mixin typePick(type)
    label
        input.elementRadio(name='typeChooser' type='radio' value=`${type.toLowerCase()}`)
        .elementPickFrame.card.m-1.p-1.pt-2
            img(src=`img/${type.toLowerCase()}-ex.png`).elementEx
            h4.mx-auto #{type}


#char-creator
    .row
        h1.mx-auto Create your new Friendo:
    .row
        .mx-auto#type-picker
            each type in types
                +typePick(type)
    .row
        .mx-auto
            input.align-middle#name-input(type='text' placeholder='Name your Friendo:' disabled)
            input.align-middle#player-input(type='text' placeholder='What is your name?' disabled)
            button.align-middle.btn.btn-primary#btnCreate(type='button' disabled) Create
