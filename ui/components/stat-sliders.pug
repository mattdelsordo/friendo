-
    var stats = [
        {
            name: 'Core',
            initial: 0,
            points: [20, 40, 60, 80]
        },
        {
            name: 'Leg',
            initial: 0,
            points: [1]
        },
        {
            name: 'Arm',
            initial: 0,
            points: [1]
        },
        {
            name: 'Sight',
            initial: 0,
            points: [30, 60]
        },
        {
            name: 'Hair',
            initial: 0,
            points: [1, 30, 70]
        },
        {
            name: 'Taste',
            initial: 0,
        },
        {
            name: 'Dog Affinity',
            initial: 0,
            points: [1, 20, 40, 60, 80]
        },
        {
            name: 'Meme Tolerance',
            initial: 0,
        },
    ]

mixin statSlider(stat)
    - var statId = stat.name.split(' ')[0].toLowerCase()
    .p-1.mt-1.w-100
        span= stat.name
        input.mr-1.ml-1.align-bottom(
            type='range'
            min=stat.initial
            max=100,
            value=stat.initial
            id=`${statId}-range`
            list=`${statId}-list`
            step=1
        )
        if stat.points
            datalist(id=`${statId}-list`)
                each point in stat.points
                    option= point
        span(id=`${statId}-num`)= stat.initial

.border.p-1.mt-1
    h5 Stats:
    each stat in stats
        +statSlider(stat)
