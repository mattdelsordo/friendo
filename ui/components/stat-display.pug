mixin statdisplay(stat)
  - var statId = stat.name.split(' ')[0].toLowerCase()
  .d-flex.flex-row.align-items-center.stat-display.p-2(data-toggle='modal' data-target=`#train-${statId}`)
      span.mr-1(id=`${statId}-icon`) #{stat.icon}
      span.mr-1(id=`${statId}-name`) #{stat.name}
      .progress.ml-auto.w-50
          .progress-bar.bg-info.w-75(id=`${statId}-prog` role=progressbar)
      span.ml-1(id=`${statId}-num`) 000

mixin trainingDialog(stat)
    - var statId = stat.name.split(' ')[0].toLowerCase()
    .modal.fade(id=`train-${statId}` role='dialog')
        .modal-dialog(role='document')
            .modal-content
                .modal-header
                    h5.modal-title Train #{stat.name}
                .modal-body
                    h6 #{stat.trainDesc}
                    div
                        label(for=`${statId}-trainbtn`)
                            | #{stat.verb} for
                            input.mr-1(id=`${statId}-trainamnt` type='number')
                            | minutes
                .modal-footer
                    button.btn.btn-secondary(data-dismiss='modal') Cancel
                    button.btn.btn-success(disabled) Begin

.row
    .col
        h5 Stats
        each stat in stats
            +statdisplay(stat)
            +trainingDialog(stat)
