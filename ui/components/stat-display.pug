mixin statdisplay(stat)
  - var statId = stat.name.split(' ')[0].toLowerCase()
  .d-flex.flex-row.align-items-center.stat-display.p-2
      span.mr-1(id=`${statId}-icon`) #{stat.icon}
      span.mr-1(id=`${statId}-name`) #{stat.name}
      .progress.ml-auto.w-50
          .progress-bar.bg-info.w-75(id=`${statId}-prog` role=progressbar)
      span.ml-1(id=`${statId}-num`) 000

.row
    .col
        h5 Stats
        each stat in stats
            +statdisplay(stat)
